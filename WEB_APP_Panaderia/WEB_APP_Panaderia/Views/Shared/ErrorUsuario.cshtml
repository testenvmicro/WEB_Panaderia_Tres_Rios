@{
	ViewData["Title"] = "Error";
	Layout = "~/Views/Shared/_Layout_Login.cshtml";
}


<div id="global-loader">
	<div class="whirly-loader"> </div>
</div>
<!-- Main Wrapper -->
<div class="main-wrapper">
	<div class="error-box">
		<div class="error-img">
			<img src="~/assets/img/authentication/error-500.png" class="img-fluid" alt="">
		</div>
		<h3 class="h2 mb-3">Vaya, algo salió mal</h3>
		<p>
			Error 500 del servidor. Pedimos disculpas y estamos solucionando el problema.
			Por favor, inténtelo de nuevo más tarde.

			Si el problema persiste, por favor contacte a servicio técnico

		</p>
		<a href="@Url.Action("Index","Home")" class="btn btn-primary">De vuelta al inicio</a>
	</div>
</div>
<!-- /Main Wrapper -->
<div class="customizer-links" id="setdata">
	<ul class="sticky-sidebar">
		<li class="sidebar-icons">
			<a href="#" class="navigation-add" data-bs-toggle="tooltip" data-bs-placement="left"
			   data-bs-original-title="Theme">
				<i data-feather="settings" class="feather-five"></i>
			</a>
		</li>
	</ul>
</div>
