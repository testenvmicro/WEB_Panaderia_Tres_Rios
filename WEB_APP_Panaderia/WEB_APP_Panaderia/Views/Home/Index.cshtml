@{
    ViewData["Title"] = "Ingresar";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<!-- Main Wrapper -->
        <div class="main-wrapper">
			<div class="account-content">
				<div class="login-wrapper login-new">
                    <div class="container">
                        <div class="login-content user-login">
                            <div class="login-logo">
                                <img src="assets/img/logo-pizzeria-panaderia.png" alt="img">
                                <a href="index.html" class="login-logo logo-white">
                                    <img src="assets/img/logo-white.png"  alt="">
                                </a>

                            </div>

                            <form>
                                <div class="login-userset">
                                    <div class="login-userheading">
                                        <h3>Inicio de Sesión</h3>
                                        <h4>Inicie sesión en el sistema con su correo y contraseña.</h4>
                                    </div>
                                    <div class="form-login">
                                        <label class="form-label">Correo electrónico</label>
                                        <div class="form-addons">
                                            <input type="text" class="form-control">
                                            <img src="assets/img/icons/mail.svg" alt="img">
                                        </div>
                                    </div>
                                    <div class="form-login">
                                        <label>Contraseña</label>
                                        <div class="pass-group">
                                            <input type="password" class="pass-input">
                                            <span class="fas toggle-password fa-eye-slash"></span>
                                        </div>
                                    </div>
                                    <div class="form-login authentication-check">
                                        <div class="row">
                                            <div class="col-6">
                                                
                                            </div>
                                            <div class="col-6 text-end">
                                        <a class="forgot-link" href="@Url.Action("Recuperar_contrasenna","Home")">¿Olvidó su contraseña?</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-login">
                                <a href="@Url.Action("Metricas","Home")" class="btn btn-login" type="submit">Iniciar Sesión</a>
                                    </div>
                            <!-- <div class="signinform">
                                        <h4>New on our platform?<a href="register-3.html" class="hover-a"> Create an account</a></h4>
                                    </div>-->
                                 
                                  
                                </div>
                            </form>
                           
                        </div>
                        <div class="my-4 d-flex justify-content-center align-items-center copyright-text">
                    <p>Derechos de autor &copy; Proyecto Panaderia Tres Rios. Todos los derechos reservados</p>
                        </div>
                    </div>
                </div>
			</div>
        </div>
		<!-- /Main Wrapper -->
		
