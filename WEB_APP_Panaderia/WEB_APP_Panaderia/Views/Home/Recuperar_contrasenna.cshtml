@{
    ViewData["Title"] = "Ingresar";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div id="global-loader">
    <div class="whirly-loader"> </div>
</div>

<!-- Main Wrapper -->
<div class="main-wrapper">
    <div class="account-content">
        <div class="login-wrapper login-new">
            <div class="container">

                <div class="login-content user-login">
                    <div class="login-logo">
                        <img src="~/assets/img/logo-pizzeria.png" alt="img">
                        <a href="index.html" class="login-logo logo-white">
                            <img src="assets/img/logo-white.png" alt="">
                        </a>
                    </div>
                    <form action="signin-3.html">
                        <div class="login-userset">
                            <div class="login-userheading">
                                <h3>¿Olvidó su contraseña?</h3>
                                <h4>Por favor introduzca su correo electrónico para enviarle instrucciones para recuperar la contraseña</h4>
                            </div>
                            <div class="form-login">
                                <label>Correo Electrónico</label>
                                <div class="form-addons">
                                    <input type="email" class="form-control">
                                    <img src="~/assets/img/icons/mail.svg" alt="img">
                                </div>
                            </div>
                            <div class="form-login">
                                <a href="@Url.Action("Index", "Home")" type="submit" class="btn btn-login">Enviar</a>
                            </div>
                            <div class="signinform text-center">
                                <h4>Regresar al <a href="@Url.Action("Index","Home")" class="hover-a"> iniciar sesión </a></h4>
                            </div>
                       
                        
                        </div>
                    </form>
                </div>
              @*   <div class="my-4 d-flex justify-content-center align-items-center copyright-text">
                    <p>Copyright &copy; 2023 DreamsPOS. All rights reserved</p>
                </div> *@
            </div>
        </div>
    </div>
</div>
<!-- /Main Wrapper -->
